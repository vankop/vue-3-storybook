{
  "compileOnSave": false,
  "compilerOptions": {
	"baseUrl": ".",
	"incremental": false,
	"noImplicitAny": true,
	"experimentalDecorators": true,
	"emitDecoratorMetadata": true,
	"jsx": "react",
	"module": "commonjs",
	"skipDefaultLibCheck": true,
	"skipLibCheck": true,
	"allowSyntheticDefaultImports": true,
	"esModuleInterop": true,
	"target": "es5",
	"lib": ["es2017", "dom"],
	"rootDir": "./src",
	"resolveJsonModule": true
  },
  "exclude": [
	"src/**/*.test.*"
  ],
  "include": [
    "src/**/*"
  ]
}
